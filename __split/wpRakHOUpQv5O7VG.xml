<?xml version="1.0"?>
<html-code id="wpRakHOUpQv5O7VG" lang="any" name="main" show-in="main" webpalschematype="wpPageRaw"><![CDATA[<h1>Checkout</h1>

@if ($cart)
<div>
  @if ($cart->cartItems)
  Items in cart: [[ $cart->itemcount() ]]
  <table class="cart-items">
    <tr class="cart-header">
      <td>Code</td>
      <td>Product</td>
      <td>Quantity</td>
    </tr>
    @foreach ($cart->cartItems as $item)
    <tr>
      <td>{{{$item->skucode}}}</td>
      <td>{{{$item->productname}}}</td>
      <td>{{{$item->quantity}}}</td>
    </tr>
    @endforeach
  </table>
  <div class="checkout-form">
    <form action="/product-store/complete-checkout" method="POST">
      <div>
        <label for="company_name">Company Name:</label>
        <input name="company_name" type="text"/>
      </div>
      <div>
        <label for="shipping_address">Shipping Address:</label>
        <input name="shipping_address" type="text"/>
      </div>
      <input type="submit" value="Submit"/>
    </form>
  </div>
  @else
  <div class="message">
    Cart is empty
  </div>
  @endif
</div>
@else
<div>
  <div class="message">
    Something went wrong, there is no cart!
  </div>
</div>
@endif
]]></html-code>
